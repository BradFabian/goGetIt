<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div id="data">
				<table class="tablesorter display compact">
		            <thead>
						<br />
		                <tr>
		                    <th>Name</th>
		                    <th>Department</th>
		                    <th>Stock</th>
		                    <th>Required</th>
		                    <th>Go Get It?</th>
		                    <th>Action</th>
		                </tr>
		            </thead>
	                {{#each products}}
	                    <tr id="{{this.id}}">
	                        <td>{{this.name}}</td>
	                        <td>{{this.department}}</td>
	                        <td>{{this.stock}}</td>
	                        <td>{{this.required}}</td>
	                        <td>
	                        	{{#if this.gogetit}}
	                        		Yes
	                        	{{else}}
	                        	  	No
	                        	{{/if}}
	                    	</td>
	                        <td>
								<a class="btn btn-success btn-sm btn-edit" href="{{this.id}}/edit">
								<span class="glyphicon glyphicon-pencil icon_edit" title="Edit Product">Edit</span>
								</a>
	                        	<a class="btn btn-danger btn-sm btn-delete" data-id="{{this.id}}">
									<span class="glyphicon glyphicon-remove icon_delete" title="Delete Product">Delete</span>
								</a>
								<a href="/api" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-question-sign icon_info" title="API">
									API
								</span></a>
							</td>
	                    </tr>
					{{/each}}
				</table>
			</div>
		</div>
	</div>
</div>
<!-- Modal for create/delete records -->
<div class="modal" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        
            <div class="modal-header">
                
                <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
        
            <div class="modal-body">
                <p>You are about to delete a product, this procedure is irreversible.</p>
                <p>Do you want to proceed?</p>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteProduct" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>