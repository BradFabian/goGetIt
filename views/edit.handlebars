<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<h3>Edit Product</h3>
			<form  method="post" action="/update" class="form-horizontal">
        		<div class="form-group">
            		<label for="name" class="col-sm-2 control-label">Title</label>
            		<div class="col-sm-10">
            			<input id="name" type="text" class="form-control" name="name" required autofocus value="{{product.name}}">
            		</div>
        		</div>
        		<div class="form-group">
            		<label for="department" class="col-sm-2 control-label">Deparment</label>
            		<div class="col-sm-10">
                        <select id="department"class="form-control" name="department">
                        {{#each department}}
                            <option value={{this.value}}
                                {{#if this.selected}}
                                    selected
                                {{/if}} 
                            >{{this.text}}</option>
                        {{/each}}
                        </select>
	            	</div>
        		</div>
        		<div class="form-group">
            		<label for="stock" class="col-sm-2 control-label">stock</label>
            		<div class="col-sm-10">
            			<input id="stock" type="text" class="form-control" name="stock" placeholder="0" value="{{product.stock }}">
            		</div>
        		</div>
        		<div class="form-group">
            		<label for="required" class="col-sm-2 control-label">required</label>
            		<div class="col-sm-10">
            			<input id="required" type="text" class="form-control" name="required" placeholder="0" value="{{product.required}}">
            		</div>
        		</div>
        		<div class="form-group">
                    <label class="col-sm-10 col-sm-offset-2">
                        <input id="gogetit" type="checkbox" name="gogetit" 
                        {{#if product.gogetit}} 
                            checked
                        {{/if}}
                        > gogetit
                    </label>
                </div>
                <input type="hidden" name="id" value="{{product.id}}">
                
        	</form>
        	<div class="form-group">
                <button type="Submit" class="btn btn-primary" id="submit">Submit</button>
            </div>
		</div>
	</div>
</div>